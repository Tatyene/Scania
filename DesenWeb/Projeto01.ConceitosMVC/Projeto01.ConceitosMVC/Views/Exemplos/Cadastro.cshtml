<h2>Cadastro de Produtos</h2>

@using(Html.BeginForm()) // por padrão ele gera um elemento <form method='post'>
{                         //para ser 'get' você passa como parâmetro (Form.Method.Get) - ele serve para obter um conteúdo. Ela copia as informações do formulário e passa para a URL.
    <div class="margem">
        <div class="mb-3">
            @Html.Label("codigo", "Código", new { @class="form-label"})
            @Html.TextBox("txtCodigo", null, new { @class="form-control"})
        </div>

        <div class="mb-3">
            @Html.Label("descricao", "Descrição", new { @class="form-label"})
            @Html.TextBox("txtDescricao", null, new { @class="form-control"})
        </div>

        <div class="mb-3">
            @Html.Label("preco", "Preço", new { @class="form-label"})
            @Html.TextBox("txtPreco", null, new { @class="form-control"})
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
}